{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "moduleDetection": "force",
    "allowJs": true,
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "ESNext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "es2022"
    ],
    "sourceRoot": "./src",
    "rootDir": "./src",
    "outDir": "./dist/types"
  },
  "include": [
    "src/**/*"
  ]
}